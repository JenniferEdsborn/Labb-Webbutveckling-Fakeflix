
<a href="Film/@Film.Id">
    <div class="card bg-dark text-white rounded">
        <img class="card-img-top" src="@Film.ImgUrl">
        <div class="card-body d-flex flex-column justify-content-end align-bottom text-left" style="position: absolute; bottom: 0; width: 100%">
            <h5 class="card-title text-truncate" style="color: white">@Film.Title</h5>
        </div>
    </div>
</a>

@code {
    [Parameter] public FilmDTO Film { get; set; } = new();
}
